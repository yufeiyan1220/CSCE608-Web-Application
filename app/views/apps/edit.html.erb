<h1>Editing App</h1>

<% provide(:title, "Edit #{@app.name}") %>
<h1>Edit <%=@app.name%></h1>
<div class="col-md-6 col-md-offset-3">
<%= form_for(@app) do |f| %>

  
  <%= f.label :name %>
  <%= f.text_field :name, :disabled=>true %>

  <%= f.label :app_type %>
  <%= f.text_field :app_type, class: 'form-control'%>

  <%= f.label :version %>
  <%= f.text_field :version, class: 'form-control' %>

  
  <%= f.label :company %>
  <%= f.select :company_id, options_for_select(
    @companies.map{ |c| [c.name, c.id] }) %>
  
  <%= f.submit "Update Account", class: "btn btn-primary" %>
<% end %>
</div>

<div><%= link_to 'Back', apps_path %></div>