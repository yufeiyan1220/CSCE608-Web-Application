<h1>New App</h1>

<% provide(:title, 'New App') %>
<h1>Create New App</h1>
<div class="col-md-6 col-md-offset-3">
<%= form_for(@app) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :app_type %>
  <%= f.text_field :app_type, class: 'form-control'%>

  <%= f.label :version %>
  <%= f.text_field :version, class: 'form-control' %>
  <%= f.label :company %>
  <%= f.select :company_id, options_for_select(
    @companies.map{ |c| [c.name, c.id] }) %>
  
  <%= f.submit "Create App", class: "btn btn-primary" %>
<% end %>
</div>

<%= link_to 'Back', users_path %>