<h1>Editing Platform</h1>
<% provide(:title, @platform.name) %>

<h1>Update your profile</h1>
<h2> Edit <%= @platform.name %></h2>

<div class="col-md-6 col-md-offset-3">
  <%= form_for(@platform) do |f| %>
  
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :version %>
  <%= f.text_field :version%>
  
  <%= f.submit "Update platform", class: "btn btn-primary" %>
  <% end %>
</div>

<div><%= link_to 'Back', platforms_path%></div>
