<% provide(:title, 'New platform') %>
<h1>Create New Company</h1>
<div class="col-md-6 col-md-offset-3">
<%= form_for(@platform) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :version %>
  <%= f.text_field :version, class: 'form-control' %>

  <%= f.submit "Create Platform", class: "btn btn-primary" %>
<% end %>
</div>

<div><%= link_to 'Back', platforms_path %></div>