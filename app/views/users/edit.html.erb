<% provide(:title, @user.name) %>

<h1>Update your profile</h1>
<h2> Edit <%= @user.name %></h2>

<div class="col-md-6 col-md-offset-3">
  <%= form_for(@user) do |f| %>
  
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email %>
  <%= f.email_field :email, :disabled=>true%>
  <%= f.label :country %>
  <%= f.text_field :country %>
  <%= f.label :state%>
  <%= f.text_field :state %>
  
  <%= f.submit "Update my account", class: "btn btn-primary" %>
  <% end %>
</div>

<div><%= link_to 'Back', users_path %></div>